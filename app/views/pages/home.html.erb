<h1>Chatroom</h1>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content" id="messages">
          <% @messages.each do |message| %>
            <%= render message %>
          <% end %>
      </div>
      <div class="extra content">
          <%= turbo_stream_from @messages_channel %>
          <%= render "messages/form", message: @message %>
      </div>
    </div>
  </div>
  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical pointing menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>